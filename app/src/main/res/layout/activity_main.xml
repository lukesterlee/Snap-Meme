<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="15dp"
    android:background="@drawable/backgroundfinal"
    android:weightSum="1">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="$NAPm3Me"
        android:textSize="50dp"
        android:id="@+id/tvSnapMeme"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_camera"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:src="@drawable/takephotofinal"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_above="@+id/iv_pop"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/iv_gallery"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:src="@drawable/galleryfinaldone"
        android:layout_gravity="right"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignTop="@+id/iv_camera"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/iv_pop"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:src="@drawable/presetfinal"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Camera"
        android:id="@+id/textView2"
        android:layout_above="@+id/iv_pop"
        android:layout_alignStart="@+id/tvSnapMeme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gallery"
        android:id="@+id/textView3"
        android:layout_marginLeft="40dp"
        android:layout_alignBottom="@+id/iv_gallery"
        android:layout_alignEnd="@+id/tvSnapMeme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Existing m3Me"
        android:id="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/iv_pop" />


</RelativeLayout>